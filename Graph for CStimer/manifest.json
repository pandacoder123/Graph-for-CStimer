{
    "manifest_version": 3,
    "name": "Graph for CSTimer",
    "version": "1.0",
    "description": "Adds a graph feature to CSTimer, making it easier to view progression.",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "permissions": ["activeTab"],
    "host_permissions": ["https://cstimer.net/*"],
    "content_scripts": [
        {
            "matches": ["https://cstimer.net/*"],
            "js": ["script.js", "library/chart.js", "library/jscolor.js"],
            "css": ["styles.css"]
        }
    ]
}
